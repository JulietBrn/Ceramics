mixin sStorage(data)
	// start sStorage
	+b.SECTION.sStorage.section#sStorage&attributes(attributes)
		.container
			.tabs.tabs-slider--js.swiper
				.tabs__caption.swiper-wrapper
					.tabs__btn.swiper-slide(href='#storage').active Схемы проезда
					.tabs__btn.swiper-slide(href='#scheme') Склады «КС Керамик»
					.tabs__btn.swiper-slide(href='#infoForDrivers') Информация для водителей
			+e.item#storage
			+e.item#scheme
				h3 Схемы проезда к складам
				+b.map-item
					.title.fw-500.title-map Склад основной на заводе
					.d-flex
						.coordination GPS: 58.467892, 50.063425
							+icon('copy')
						a(href='img/map-bg-4.png' download).small
							+icon('download')
							| Скачать изображение
					+e.img-wrap.bg-wrap.map-wrap
						+img(`img/map-bg-4.png`, 'bg')
					p Въезд в Кирово-Чепец, проехать прямо до поворота на улица Володарскова, завернуть направо, через 900 метров повернуть направо на улицу Юбилейная, направляйтесь прямо по дороге
				+b.map-item
					.title.fw-500.title-map Склад база ОРС
					.d-flex
						.wrap
							.coordination GPS: 58.517168, 50.004264
								+icon('copy')
							.d-none.d-md-block Ориентир — г. Кирово-Чепецк, квартал Цепели, 18
						a(href='img/map-bg-3.png' download).small
							+icon('download')
							| Скачать изображение
					+e.img-wrap.bg-wrap.map-wrap
						+img(`img/map-bg-3.png`, 'bg')
					p Въезд в Кирово-Чепец, проехать прямо и повернуть до моста направо, 1 км проехать прямо, повернуть направо и через 20 метров повернуть налево
				+b.map-item
					.title.fw-500.title-map Склад УМИАТ
					.d-flex
						.coordination GPS: 58.527740, 49.984161
							+icon('copy')
						a(href='img/map-bg-2.png' download).small
							+icon('download')
							| Скачать изображение
					+e.img-wrap.bg-wrap.map-wrap
						+img(`img/map-bg-2.png`, 'bg')
					p Въезд в Кирово-Чепец, повернуть на Производственную улицу, проехать прямо и повернуть направо, ориентир желтые ворота
				+b.map-item
					.title.fw-500.title-map Склад «Славянский мир»
					.d-flex
						.coordination GPS: 55.621473,37.450197
							+icon('copy')
						a(href='img/map-bg-1.png' download).small
							+icon('download')
							| Скачать изображение
					+e.img-wrap.bg-wrap.map-wrap
						+img(`img/map-bg-1.png`, 'bg')
					p Оптово-розничная точка продажи строительный рынок «Славянский мир. Тополёк»: Москва, поселение Мосрентген, Проектируемый проезд № 134. строительный рынок «Славянский мир», место ТН-11.
			+e.item#infoForDrivers
				h3 Информация для водителей
				+e.row-drivers
					+storageFeature('watch', 'Время погрузки', 'пн-пт с 8.30 до 16.00, сб. и вс. выходной.')
					+storageFeature('carHeavy', 'Правила погрузки', 'Погрузка осуществляется с одного бока при помощи погрузчика.')
					+storageFeature('delivery', 'Требования для перевозки', 'Закрепление ремнями — 1 ремень на два поддона.')
					+storageFeature('close', 'Информация по закрытию дорог', 'Нет ограничений.')
				h5 Нормы загрузки
	// end sStorage

mixin storageFeature(icon, title, text)
	+b.storage-feature
		+icon(icon)
		.title.fw-500=title
		p= text