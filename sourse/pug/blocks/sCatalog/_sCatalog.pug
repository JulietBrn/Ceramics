mixin product-item(i, brand, brandlight, t)
	+b.ARTICLE.product-item(href='#').zoom-animate
		+e.img-wrap.bg-wrap
			+img(`img/prod-${i}.png`).picture-bg
		+e.caption
			+img(src=`img/${brand}.svg`, alt="").brand.d-md-none
			+img(src=`img/${brandlight}.svg`, alt="").brand.d-none.d-md-block
			+e.title!= t
	// /.product-item

