mixin block1(img, brand)
	.block1
		<video autoplay loop muted class="video " src="video/brand.mp4"></video>
		//- .parallax-container(style=`background-image:url(img/brand-header-${img}.png);`)
		.content
			+img(src=`img/${brand}.svg`, alt="").brand

mixin block2(img, title, text)
	.block2
		.parallax-container(style=`background-image:url(img/${img}-brand.png);`)
		+e.content
			+b.title-item
				.h1=title
			p=text

mixin cardSquareBrand(i, text, icon, optionIcon)
	+b.card-square-item--1(style=`background-image:url(img/card-sq-${i}.png);`)
		.text-wrapper
			+img(src=`img/${optionIcon}.svg`, alt="").small-img
			.h2.text-center!= text
		+img(src=`img/${icon}.svg`, alt="").brand

mixin block3(img1, text1, text2, i, title, brand, icon)
	.block3
		.design-block
			+cardSquareBrand(i, title, brand, icon)
			+b.card-square-item--2
				.wrap
					+img(src=`img/${img1}.svg`, alt="").small-img.d-none.d-lg-block
					.wrapper
						p=text1
						p=text2

mixin block4(img)
	.block4
		+e.img-wrap.bg-wrap
			+img(`img/${img}-bg.png`, 'bg')
		.content
			+e.btn.btn.btn-primary(href='#') Перейти в каталог