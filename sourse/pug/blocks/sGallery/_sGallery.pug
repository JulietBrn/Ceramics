						+e.title.fw-600.d-md-none.text-center Тема видео
						.items
							+e.wrap.filter.small.wrap-no-inputs
								+in-c("checkbox", 'Дом с характером. 1 сезон')
								+in-c("checkbox", 'Дом с характером. 2 сезон')
								+in-c("checkbox", 'Объекты')(checked)
