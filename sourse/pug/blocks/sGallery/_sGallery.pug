		+b.architecture-project--video(href='https://youtu.be/7AkbUfZjS5k?si=boWKeffFxOLhUsO-', data-fancybox)
			+e.img-wrap.bg-wrap
				+img(`img/gallery-${i}.png`, 'bg')
				+icon('youtube')
				+e.text-wrap
					+e.city= city
